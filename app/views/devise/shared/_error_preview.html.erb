<div id="preview">
    <% if resource.errors.any? %>
      <div class="card text-white bg-danger mb-3 card-errors">
        <div class="card-header">Errors</div>
        <div class="card-body">
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li class="card-text"><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
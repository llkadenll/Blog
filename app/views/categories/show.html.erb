<h1><span class=<%= "text-"+@category.color %>><i class="fa <%= @category.icon %>"></i> <%= @category.name %></span></h1>


<% @posts.each do |post| %>
  <% if (user_signed_in? && post.author_id == current_user.id) ||
        ((!user_signed_in? || post.author_id != current_user.id) && post.public) %>
        <%= render "/posts/post", post: post %>
  <% end %>
<% end %>
<%= search_form_for(@query, url: search_path, method: :get, class: 'form-inline') do |f| %>

  <%= f.search_field :title_or_body_or_user_email_i_cont_any,
  size: "20",
  placeholder: "Search...",
  class: "form-control form-search" %>
  
  <%= f.button(class: "btn btn-outline-primary btn-search") do %>
    <i class='fa fa-search'></i>
  <% end %>

<% end %>

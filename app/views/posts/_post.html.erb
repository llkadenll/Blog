<div class="card bg-light mb-3">
  <div class="card-header">
    <%= post_created_at(post) %> by <%= post.user.email %>
    
    <div style="display:flex; justify-content: flex-end">
      <%= post_category(post) %>
      <span class="badge badge-secondary">
        <%= post_public(post) %>
      </span>
    </div>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5>
    <p class="card-text"><%= post.body.truncate(700) %></p>
    <%= link_to "Read", post, class: "btn btn-outline-primary"%>
  </div>
</div>

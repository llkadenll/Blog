<%= form_with data:{ turbo_confirm: 'Are you sure?' }, model: post do |form| %>
  <div>
    <% if post.errors.any? %>
      <%= form.text_field :title, size: "85x1", placeholder: "Invalid title", class: "form-control is-invalid" %>
    <% else %>
      <%= form.text_field :title, size: "85x1", placeholder: "Title", class: "form-control" %>
    <% end %>
  </div>

  <div>
    <% if post.errors.any? %>
      <%= form.text_area :body, size: "85x18", placeholder: "Invalid content", class: "form-control is-invalid" %>
    <% else %>
      <%= form.text_area :body, size: "85x18", placeholder: "Content", class: "form-control" %>
    <% end %>
  </div>

  <div>
    <%= form.submit class: "btn btn-success"%>
  </div>
<% end %>